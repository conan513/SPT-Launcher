<Window x:Class="Aki.Launcher.MiniDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aki.Launcher"
        xmlns:helpers="clr-namespace:Aki.Launcher.Helpers;assembly=Aki.Launcher.Base"
        xmlns:lhelpers="clr-namespace:Aki.Launcher.Helpers"
        mc:Ignorable="d"
        Title="Launcher Mini Debug Log" Height="300" Width="700" Background="DimGray">
    <Grid>
        <ScrollViewer x:Name="sv" Background="Gainsboro" Grid.Row="1" ScrollChanged="sv_ScrollChanged">
            <ListBox ItemsSource="{Binding Source={x:Static lhelpers:MiniDebugHelper.Instance}, Path=MiniLog,
                                           UpdateSourceTrigger=PropertyChanged}"
                     />
        </ScrollViewer>
    </Grid>
</Window>
